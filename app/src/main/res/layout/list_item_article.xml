<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/widget_rect_black_hollow">

    <TextView
        android:id="@+id/txt_article_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:singleLine="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/txt_article_super_chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="name"
        app:layout_constraintTop_toBottomOf="@id/txt_article_name"
        app:layout_constraintLeft_toLeftOf="@id/txt_article_name"
        />

    <TextView
        android:id="@+id/txt_article_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:hint="Author"
        app:layout_constraintTop_toTopOf="@id/txt_article_super_chapter_name"
        app:layout_constraintLeft_toRightOf="@id/txt_article_super_chapter_name"
        />
</android.support.constraint.ConstraintLayout>